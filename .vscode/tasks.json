{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-default!!!",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/c++/src/rectangle1.cpp",
                "${workspaceFolder}/c++/include/rectangle/Rectangle.cpp",  // src 폴더에서 rectangle.cpp 추가
                "-o",
                "${workspaceFolder}/c++/build/rectangle1.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true   // 이 작업을 기본 작업으로 설정
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Default build task to compile C++ files."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 활성 파일 빌드",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false  // 기본 작업이 아님
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ]
}